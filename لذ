    <script>
        // Password toggle functionality
        const togglePassword = document.getElementById('togglePassword');
        const passwordField = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');

        togglePassword.addEventListener('click', function() {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            
            if (type === 'text') {
                eyeIcon.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                `;
            } else {
                eyeIcon.innerHTML = `
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                `;
            }
        });

        // CAPTCHA functionality
        const captchaDisplay = document.getElementById('captchaDisplay');
        const refreshCaptcha = document.getElementById('refreshCaptcha');
        let currentCaptcha = 'A7K9M';

        function generateCaptcha() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let result = '';
            for (let i = 0; i < 5; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return result;
        }

        refreshCaptcha.addEventListener('click', function() {
            currentCaptcha = generateCaptcha();
            captchaDisplay.textContent = currentCaptcha;
            
            // Add refresh animation
            captchaDisplay.style.transform = 'rotate(360deg)';
            setTimeout(() => {
                captchaDisplay.style.transform = 'rotate(0deg)';
            }, 300);
        });

        // Form submission
        const loginForm = document.getElementById('loginForm');
        loginForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const captchaInput = document.getElementById('captcha').value;
            
            // Validate CAPTCHA
            if (captchaInput.toUpperCase() !== currentCaptcha) {
                alert('کد امنیتی اشتباه است. لطفاً دوباره تلاش کنید.');
                document.getElementById('captcha').value = '';
                document.getElementById('captcha').focus();
                return;
            }
            
            // Validate other fields
            if (!username || !password) {
                alert('لطفاً تمام فیلدها را پر کنید.');
                return;
            }
            
            // Show success message (in a real application, this would submit to a server)
            alert('ورود موفقیت‌آمیز بود! در حال انتقال به داشبورد...');
            
            // Reset form
            loginForm.reset();
            currentCaptcha = generateCaptcha();
            captchaDisplay.textContent = currentCaptcha;
        });

        // Add smooth transitions
        document.querySelectorAll('.input-field').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('scale-[1.02]');
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.classList.remove('scale-[1.02]');
            });
        });
    </script>
